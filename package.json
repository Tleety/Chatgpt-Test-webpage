{
  "name": "chatgpt-test-webpage",
  "version": "1.0.2",
  "description": "A GitHub Pages site with web projects including a Snake game",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:summary": "node scripts/generate-test-summary.js",
    "bump-version": "node scripts/bump-version.js",
    "generate-deployment-info": "node scripts/generate-deployment-info.js"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "roots": [
      "<rootDir>/tests",
      "<rootDir>"
    ]
  },
  "dependencies": {
    "jsdom": "^26.1.0"
  }
}
