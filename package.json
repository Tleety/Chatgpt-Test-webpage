{
  "name": "chatgpt-test-webpage",
  "version": "1.0.2",
  "description": "A GitHub Pages site with web projects",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:summary": "node scripts/generate-test-summary.js",
    "bump-version": "node scripts/bump-version.js",
    "generate-deployment-info": "node scripts/generate-deployment-info.js"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "@jest/globals": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
